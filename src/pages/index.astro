---
// Componentes
import Head from '../components/Head.astro'
import Strong from '../components/atoms/Strong.astro'
import Paragraph from '../components/atoms/Paragraph.astro'

//Seccions
import Header from '../components/molecules/Header.astro'
import Proyectos from '../components/organisms/Proyectos.astro'
import UltimosPost from '../components/organisms/UltimosPost.astro'
import Footer from '../components/organisms/Footer.astro'
---

<!DOCTYPE html>
<html lang='es'>
  <Head
    title='Portafolio web profesional de Fabian'
    description='Este es el portafolio de fabian, bienvenidos'
  />

  <body>
    <Header client:load />
    <main>
      <div class='presentation_container'>
        <h1 class='presentation_title'>
          Hola ðŸ¤™ soy <h>Fabian Molina ðŸ‡¨ðŸ‡´</h>
        </h1>
        <Paragraph>
          <p>
            Desarrollador de Software & Ingeniero Geologo. Este es mi
            blog/portafolio donde trato temas diversos enfocados a Desarrollo
            Web y TecnologÃ­a. Â¡Bienvenido!
          </p>
        </Paragraph>

        <div class='presentation_social'>
          <Strong content='Contactame' />
          <div class='presentation_social-container-icon'>
            <a
              class='presentation_social-icon'
              href='https://www.github.com/fabianmolinab'
              target='_blank'
              ><i class='fa-brands fa-github fa-2x'></i>
            </a>
            <a
              class='presentation_social-icon'
              href='https://www.linkedin.com/in/fabianmolinab/'
