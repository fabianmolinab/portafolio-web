---
//Icons
import {TbBrandGithub, TbBrandLinkedin} from "react-icons/tb"
// Componentes
import Head from '../components/Head.astro'
import Paragraph from '../components/atoms/Paragraph.astro'

//Seccions
import Header from '../components/molecules/Header.astro'
import Proyectos from '../components/organisms/Projects.astro'
import UltimosPost from '../components/organisms/LastPost.astro'
import Footer from '../components/organisms/Footer.astro'
---

<!DOCTYPE html>
<html lang='es'>
  <Head
    title='Portafolio web profesional de Fabian'
    description='Este es el portafolio de fabian, bienvenidos'
  />

  <body>
    <Header client:load />
    <main>
      <div class='presentation_container'>
        <h1 class='presentation_title'>
          Hola ðŸ¤™ soy <h>Fabian Molina ðŸ‡¨ðŸ‡´</h>
        </h1>
        <Paragraph>
          <p>
            Desarrollador de Software, es mi blog/portafolio donde trato temas diversos enfocados a programaciÃ³n. Â¡Bienvenido!
          </p>
        </Paragraph>

        <div class='presentation_social'>
          <a
            class='presentation_social-icon-github'
            href='https://www.github.com/fabianmolinab'
            target='_blank'
            >
            <TbBrandGithub/>
          </a>
          <a
            class='presentation_social-icon-linkedin'
            href='https://www.linkedin.com/in/fabianmolinab/'
            target='_blank'
            >
            <TbBrandLinkedin/>
          </a>
        </div>
        <Proyectos />
        <UltimosPost />
        <Footer client:visible />
      </div>
    </main>

    <style>
      .presentation_container {
        margin-top: calc(91px + 1rem);
      }

      .presentation_title {
        font-size: var(--font-size-title);
        font-weight: 600;
        margin: 0 0 20px;
        padding: 0;
      }

      .presentation_title h {
        color: var(--blue-dark-color);
        cursor: no-drop;
      }

      .presentation_title h:hover {
        color: var(--violet-color);
      }

      .presentation_social {
        display: flex;
        align-items: center;
        margin-top: 20px;
      }
      .presentation_social a:hover {
        color: var(--violet-color);
        transition: 0.3s;
      }

      .presentation_social-icon-github {
        cursor: pointer;
        color: var(--white-color);
        margin-right: 10px;
        font-size: 1.6rem;
      }

      .presentation_social-icon-linkedin {
        cursor: pointer;
        color: var(--white-color);
        font-size: 1.7rem;
      }

      @media screen and (min-width: 360px) and (max-width: 500px) {
        .presentation_container {
          margin-top: calc(41px + 2rem);
          padding: 0 20px;
        }

        .presentation_title {
          font-size: var(--font-size-title-mobile);
          margin-bottom: 10px;
        }
        .presentation_social {
          display: flex;
          justify-content: center;
        }
        .presentation_social-container-icon {
          margin-top: 20px;
        }
      }
    </style>
  </body>
</html>
