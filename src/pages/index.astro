        <Proyectos />
        <UltimosPost />
        <Footer client:visible />
      </div>
    </main>
    <style>
      .presentation_container {
        margin-top: calc(91px + 1rem);
      }

      .presentation_title {
        font-size: var(--font-size-title);
        font-weight: 600;
        margin: 0 0 20px;
        padding: 0;
      }

      .presentation_title h {
        color: var(--blue-dark-color);
        cursor: no-drop;
      }

      .presentation_title h:hover {
        color: var(--violet-color);
      }

      .presentation_social {
        display: flex;
        align-items: center;
        height: 40px;
        margin-top: 20px;
      }

      .presentation_social-icon {
        cursor: pointer;
        color: transparent;
      }

      .fa-brands {
        color: var(--white-color);
        margin-right: 10px;
      }

      .fa-brands:hover {
        color: var(--violet-color);
        transition: 0.3s;
      }

      @media screen and (min-width: 360px) and (max-width: 500px) {
        .presentation_container {
          margin-top: calc(41px + 2rem);
          padding: 0 20px;
        }

        .presentation_title {
          font-size: var(--font-size-title-mobile);
          margin-bottom: 10px;
        }
        .presentation_social {
          display: flex;
          flex-direction: column;
        }
        .presentation_social-container-icon {
          margin-top: 20px;
        }
      }
    </style>
  </body>
</html>
