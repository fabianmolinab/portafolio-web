---
import PostPreview from '../molecules/PostPreview.astro'

const postsBlog = await Astro.glob('../../pages/blog/posts/*.md')

if (postsBlog.length >= 5) {
  postsBlog.splice(4, 1)
}
---

<div class='post_title'>
  <h2>Ultimos Posts</h2>
  <a href='/blog'>Ver todos</a>
</div>

<section>
  {postsBlog.map((post) => <PostPreview post={post} />)}
</section>

<style>
  .post_title {
    display: flex;
    margin-bottom: 30px;
    justify-content: space-between;
    align-items: center;
  }
  .post_title h2 {
    margin: 0;
  }
  .post_title a {
    text-decoration: none;
    color: var(--white-color);
    font-size: 0.9em;
  }
</style>
