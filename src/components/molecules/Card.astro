---
import {Image} from '@astrojs/image/components'

export interface Props {
  urlImg: string
  altImg: string
  title: string
  urlLink: string
  urlGit: string
  urlName: string
  description: string
}

const {urlImg, altImg, title, urlLink, urlGit, urlName, description} =
  Astro.props as Props
---

<div class='card'>
  <!-- Imagen-->
  <Image
    class='card_img'
    src={urlImg}
    width={600}
    height={360}
    alt={altImg}
    format='png'
  />

  <div class='card_seccion'>
    <!-- Title  -->
    <div class='card_seccion-title'>
      <h3>{title}</h3>
    </div>
    <!-- DescripciÃ³n -->
    <p class='card_seccion-description'>{description}</p>
    <a href={urlLink} class='card_seccion-name'>{urlName}</a>
    <a href={urlGit} class='card_seccion-git'
      >| Ver el codigo <i class='fa-brands fa-github-alt'></i>
    </a>
  </div>
</div>

<style>
  .card {
    display: flex;
    flex-direction: column;
    align-items: center;
    border-radius: 6px;
    background-color: var(--background-color-dark);
    overflow: hidden;
    box-shadow: rgba(15, 17, 21, 0.25) 0px 4px 6px,
      rgba(15, 17, 21, 0.1) 0px 5px 7px;
    margin-bottom: 75px;
    transition: box-shadow 400ms ease-in-out 0s,
      background-color 400ms ease-in-out 0s;
  }

  .card_img {
    width: 100%;
    border-radius: 6px;
  }

  .card_seccion {
    width: 100%;
    padding: 20px;
  }

  .card_seccion-title {
    font-size: 1.1em;
    margin-bottom: 15px;
  }

  .card_seccion-description {
    font-size: 0.9em;
    line-height: 1.5rem;
    margin-bottom: 15px;
  }

  .card_seccion-name,
  .card_seccion-git {
    color: var(--blue-light-color);
    font-size: 0.9em;
    text-decoration: none;
  }
</style>
