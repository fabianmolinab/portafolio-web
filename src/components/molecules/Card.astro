---
import {Image} from '@astrojs/image/components'

export interface Props {
  urlImg: string
  altImg: string
  title: string
  urlLink: string
  urlGit: string
  urlName: string
  description: string
}

const {urlImg, altImg, title, urlLink, urlGit, urlName, description} =
  Astro.props
console.log(urlLink)
---

<div class='card'>
  <!-- Imagen-->

  <Image class='card_img' src={urlImg} width={600} height={360} alt={altImg} />

  <div class='card_seccion'>
    <!-- Title  -->
    <div class='card_title'>
      <h3>{title}</h3>
    </div>
    <!-- DescripciÃ³n -->
    <p class='card_description'>{description}</p>
    <a href={urlLink} class='card_name'>{urlName}</a>
    <a href={urlGit} class='card_git'
      >Ver el codigo <i class='fa-brands fa-github-alt'></i>
    </a>
  </div>
</div>

<style>
  .card {
    display: flex;
    flex-direction: column;
    align-items: center;
    border-radius: 6px;
    background-color: var(--background-color-dark);
    overflow: hidden;
    box-shadow: rgba(15, 17, 21, 0.25) 0px 4px 6px,
      rgba(15, 17, 21, 0.1) 0px 5px 7px;
    margin-bottom: 75px;
    transition: box-shadow 400ms ease-in-out 0s,
      background-color 400ms ease-in-out 0s;
  }

  .card_img {
    border-radius: 6px;
  }

  .card_seccion {
    width: 100%;
    padding: 20px;
  }
</style>
