---
interface Props {
  urlImg: string
  title: string
  urlLink: string
  urlGit: string
  linkName: string
  description: string
}


const { urlImg, title, urlLink, urlGit, linkName, description } =
  Astro.props as Props

---

<div class='card'>
  <!-- Imagen-->
  <img src={urlImg} class='card_img' />

  <!-- Title  -->
  <div class='card_title'>
    <h3>{title}</h3>
  </div>

  <!-- DescripciÃ³n -->
  <p class='card_description'>{description}</p>
  <a href={urlLink}>{linkName}</a>
  <a href={urlGit}>Ver el codigo <i class='fa-brands fa-github-alt'></i></a>
</div>
<style>
  .card {
    border-radius: 6px;
    background-color: var(--background-color-dark);
  }
</style>
